@model MtgCollectionMgr.ViewModels.ViewCollectionViewModel

@{
    ViewData["Title"] = "Cards";
}

<h2>My Collection</h2>

<div class="row">
    <div class="col-md-3">
        <form asp-controller="CollectionModels" asp-action="Search">
            <div class="form-group">
                <label>Search for a Card</label>
                <input type="text" name="searchTerm" class="form-control" />
            </div>
            <input type="submit" value="Search" />
        </form>
    </div>
</div>

<hr />

<div>    
    <table>
        <thead>
            <tr></tr>
        </thead>
        @foreach (var item in Model.Cards)
        {
            <tr>
                <td>@item.CardModel.Name</td>
                <td><img src="@item.CardModel.ImageUrl" /></td>
            </tr>
        }
    </table>
</div>

