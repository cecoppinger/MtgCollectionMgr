@model MtgCollectionMgr.Models.CardFromJson

@{
    ViewData["Title"] = "Cards";
}

<h2>My Collection</h2>

<div class="row">
    <div class="col-md-3">
        <form asp-controller="CollectionModels" asp-action="Search">
            <div class="form-group">
                <label>Search for a Card</label>
                <input type="text" name="searchTerm" class="form-control" />
            </div>
            <input type="submit" value="Search" />
        </form>
    </div>
</div>

<hr />

<div>
    <img src="@Model.Cards[0].ImageUrl" />
    <p>@Model.Cards[0].ManaCost</p>
    <p>@Model.Cards[0].ManaCost</p>
    
</div>

